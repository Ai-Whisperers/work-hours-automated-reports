# Application Environment
ENVIRONMENT=development
DEBUG=false

# Clockify Configuration
CLOCKIFY_API_KEY=your_clockify_api_key_here
CLOCKIFY_WORKSPACE_ID=your_workspace_id_here
CLOCKIFY_BASE_URL=https://api.clockify.me/api/v1
CLOCKIFY_TIMEOUT=30
CLOCKIFY_MAX_RETRIES=3

# Azure DevOps Configuration
ADO_ORG=your_organization_name
ADO_PROJECT=your_project_name
ADO_PAT=your_personal_access_token_here
ADO_BASE_URL=https://dev.azure.com
ADO_API_VERSION=7.0
ADO_TIMEOUT=30
ADO_MAX_RETRIES=3
ADO_BATCH_SIZE=200

# Cache Configuration
CACHE_BACKEND=local  # Options: local, redis, memory
CACHE_TTL=3600
CACHE_DIRECTORY=.cache

# Redis Configuration (optional, only if CACHE_BACKEND=redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0
# REDIS_KEY_PREFIX=clockify_ado:

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# Report Configuration
OUTPUT_FORMAT=excel  # Options: excel, html, json, pdf
REPORT_TEMPLATE_DIR=templates
REPORT_OUTPUT_DIR=reports

# Performance Configuration
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=60

# Feature Flags
ENABLE_CACHING=true
ENABLE_FUZZY_MATCHING=true
ENABLE_NOTIFICATIONS=false
ENABLE_METRICS=true

# Email Notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_USE_TLS=true
# NOTIFICATION_FROM=reports@example.com
# NOTIFICATION_RECIPIENTS=team@example.com,manager@example.com